<?xml version="1.0" encoding="UTF-8"?>

<project name="WebDriver4PHP" default="build">
    
	<property name="selenium-server-url" 
		value="http://selenium.googlecode.com/files/selenium-server-standalone-2.14.0.jar" />
	<property name="selenium-server-dest" 
		value="resources/bin/selenium-server.jar" />
	
	
	<target name="w4p-download-selenium-server">
		<get src="${selenium-server-url}" dest="${selenium-server-dest}" />
	</target>
	
</project>